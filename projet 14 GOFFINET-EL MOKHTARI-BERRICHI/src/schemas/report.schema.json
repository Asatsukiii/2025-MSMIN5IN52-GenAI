{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Report Schema",
  "type": "object",
  "required": ["title", "author", "content", "date"],
  "properties": {
    "title": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "required": ["name", "email", "organization"],
      "properties": {
        "name": {"type": "string"},
        "email": {"type": "string", "format": "email"},
        "organization": {"type": "string"}
      }
    },
    "content": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["section_title", "section_content"],
        "properties": {
          "section_title": {"type": "string"},
          "section_content": {"type": "string"}
        }
      }
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "summary": {
      "type": "string"
    }
  }
}